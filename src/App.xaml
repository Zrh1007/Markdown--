<Application
    x:Class="AIChatApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <!-- 消息气泡样式 -->
            <Style x:Key="UserMessageStyle" TargetType="Border">
                <Setter Property="Background" Value="#0078D4"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Margin" Value="80,8,16,8"/>
            </Style>
            
            <Style x:Key="AIMessageStyle" TargetType="Border">
                <Setter Property="Background" Value="#F3F2F1"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Margin" Value="16,8,80,8"/>
            </Style>
            
            <!-- 文本样式 -->
            <Style x:Key="MessageTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
            
            <Style x:Key="AIMessageTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#323130"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>